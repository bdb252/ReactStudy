<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 정적 파일은 리디렉션하지 않음
  RewriteCond %{REQUEST_URI} !\.(js|css|png|jpg|jpeg|gif|svg|ico|woff2?|ttf|eot|otf|map)$ [NC]

  # 파일이나 디렉토리가 실제로 존재하지 않으면 index.html로 리디렉션
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
